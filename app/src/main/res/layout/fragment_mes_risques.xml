<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_mes_risques"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/ColorWhite"
    android:weightSum="1">

    <fragment android:name="fr.brgm.georisques.ui.fragment.tablet.WeatherFragment"
        android:id="@+id/fragment_menu_gauche"
        android:layout_weight="1"
        android:layout_width="50dp"
        android:layout_margin="@dimen/small_vertical_margin"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_menu_gauche" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Inondation"
        android:textColor="@color/ColorBlue"
        android:paddingBottom="5dp"/>

    <include layout="@layout/underline_text"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/risque_inondation"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/RetraitArgile"
        android:textColor="@color/ColorBlue"
        android:paddingBottom="5dp"/>

    <include layout="@layout/underline_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:text="@string/risque_retrait"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/MouvementTerrain"
        android:textColor="@color/ColorBlue"
        android:paddingBottom="5dp"/>

    <include layout="@layout/underline_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:text="@string/risque_mouvement"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Cavite"
        android:textColor="@color/ColorBlue"
        android:paddingBottom="5dp"/>

    <include layout="@layout/underline_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:text="@string/risque_cavite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Seisme"
        android:textColor="@color/ColorBlue"
        android:paddingBottom="5dp"/>

    <include layout="@layout/underline_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:text="@string/risque_seisme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/SitePollue"
        android:textColor="@color/ColorBlue"
        android:paddingBottom="5dp"/>

    <include layout="@layout/underline_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:text="@string/risque_pollue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/InstallationClasse"
        android:textColor="@color/ColorBlue"
        android:paddingBottom="5dp"/>

    <include layout="@layout/underline_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:text="@string/risque_classe"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Canalisation"
        android:textColor="@color/ColorBlue"
        android:paddingBottom="5dp"/>

    <include layout="@layout/underline_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:text="@string/risque_canalisation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/InstallationNucleaire"
        android:textColor="@color/ColorBlue"
        android:paddingBottom="5dp"/>

    <include layout="@layout/underline_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:text="@string/risque_nucleaire"/>

</LinearLayout>

</ScrollView>